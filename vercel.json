{
    "version": 2,
    "builds": [
      {
        "src": "public/**/*",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "public/dist"
        }
      },
      {
        "src": "api/index.php",
        "use": "@vercel/php"
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/.*", "dest": "/index.php" }
    ]
  }
  